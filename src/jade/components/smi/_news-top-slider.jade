    .row(data-equalizer='top-news')
        .small-12.medium-8.large-9.columns
            .row.collapse
                .small-12.large-8.columns
                    //Slider body
                    .x-carousel-news.carousel-news
                        .carousel-news__item(data-equalizer-watch='top-news', style='background: #1ccacd url(./images/image.svg) 0 0/100% 100% no-repeat;')
                            a(href='#', title='').carousel-news__link Длинный-длинный заголовок новости 1
                        .carousel-news__item(data-equalizer-watch='top-news', style='background: #0c75bc url(./images/image.svg) 0 0/100% 100% no-repeat;')
