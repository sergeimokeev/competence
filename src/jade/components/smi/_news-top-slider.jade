                        .carousel-news__item(data-equalizer-watch='top-news', style='background: #4dc7a0 url(./images/image.svg) 0 0/100% 100% no-repeat;')
                            a(href='#', title='').carousel-news__link Длинный-длинный заголовок новости 321
                        .carousel-news__item(data-equalizer-watch='top-news', style='background: #ca3034 url(./images/image.svg) 0 0/100% 100% no-repeat;')
