            .column
                .callout(data-equalizer-watch='video')
                    p
                        img(src='./images/image.svg', alt='Видео', style='background:#999;width:100%;height:220px;')
                    p
                        a(href='#')= name
                    p
                        i.fa.fa-eye &nbsp;
