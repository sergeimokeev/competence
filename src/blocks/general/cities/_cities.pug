mixin cities(city="Ярославль")
  .overlay
  .cities-general
    span#cities-select.cities-select
      i.fas.fa-map-marker-alt.fa-lg
      |  #{city}
    #cities-container.cities-container
      .cities-main-window
        .cities-main-window-inner
          span.cities-main-window-inner-title
            | Выберите город
          .cities-main-window-inner-search
            input#searchCities(type='text', name='searchCities', placeholder='Начните вводить город')
          #main-window-close.cities-container-close
            i.fas.fa-times.text-secondary
        #cities-main-window-list.cities-main-window-list.clearfix
          a.cities-main-window-list-link(data-id='168', href='https://vladimir.ceteralabs.ru')  Владимир 
          a.cities-main-window-list-link(data-id='174', href='https://vologda.ceteralabs.ru')  Вологда 
