mixin offspring(title='Картридж совместимый SuperFine (SF-CN048AE) 951XL Magenta')
  .grid-x.grid-padding-x.offspring
    .cell.small-8.medium-4.large-4
      .offspring__img: img(src='./i/photo.svg' alt='Товар')
    .cell.small-16.medium-11.large-8
      h5: a(href='shop-product.html')= title
      ul.show-for-large
        li Гарантия: 1 год
        li Мощность: 1000W
        li Цвет: Красный
        li Страна: Китай

    .cell.medium-9.large-10
      .grid-x.grid-padding-x
        .cell.small-16.medium-12.large-6
          .offspring__price
            | 25&nbsp;280&nbsp;
            i.fas.fa-ruble-sign
          .offspring__old
            | 27&nbsp;150&nbsp;
            i.fas.fa-ruble-sign
        .cell.small-8.medium-12.large-8
          +quant
        .cell.large-10
          .offspring__price
            | 25 280&nbsp;
            i.fas.fa-ruble-sign
    .cell.large-2
      .offspring__info
        a(href='#').offspring__small Удалить
        a(href='#').offspring__small Отложить
  hr
