extends smi-index

block article
    include components/mixins/_mixin-news-tile

    include components/common/_breadcrumbs

    .row.column: h1 Заголовок новости с длинным названием
    .row
        .small-12.medium-9.column

            .content
                p.text-dark-gray Константин Александропольский, 12:20 16.02.2016

                include components/common/_text

                .callout.text-center
                    span.text-medium-gray Поделиться в соц. сетях: &#160;
                    a(href='#', title='').fa-stack.fa-lg.text-vk
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-vk.fa-stack-1x.fa-inverse
                    | &nbsp;
                    a(href='#', title='').fa-stack.fa-lg.text-twi
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-twitter.fa-stack-1x.fa-inverse
                    | &nbsp;
                    a(href='#', title='').fa-stack.fa-lg.text-fb
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-facebook.fa-stack-1x.fa-inverse
                    | &nbsp;
                    a(href='#', title='').fa-stack.fa-lg.text-ok
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-odnoklassniki.fa-stack-1x.fa-inverse
                    | &nbsp;
                    a(href='#', title='').fa-stack.fa-lg.text-insta
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-instagram.fa-stack-1x.fa-inverse
                    | &nbsp;
                    a(href='#', title='').fa-stack.fa-lg.text-gp
                        i.fa.fa-circle.fa-stack-2x
                        i.fa.fa-google-plus.fa-stack-1x.fa-inverse

                .callout
                    h4 Ещё по этой теме
                    ul
                        li: a(href='#', title='') УЕФА может исключить футболиста «Локомотива» за майку
                        li: a(href='#', title='') Источник: ФСБ и ФНС провели операцию по зачистке алкогольного рынка
                        li: a(href='#', title='') Пол Маккартни не прошел фейс-контроль на вечеринку после «Грэмми»

            .row.column: hr

            .content
                h3.text-dark-gray Похожие новости
                .row.small-up-1.medium-up-2.large-up-3
                    +newsTile()
                    +newsTile('Разработаем несколько интернет-магазинов по продаже сантехники')
                        p Приняли на комплексное обслуживание компанию «СантехОпт». Проект будет развиваться по методологии «Быстрый старт».
                    +newsTile()

                include components/smi/_aside-subscribe

                .callout
                    include components/smi/_comments

        aside.medium-3.show-for-medium.column
            .content
                h2 Календарь материалов
                include components/common/_calendar
                br

                h2 Другие новости

                -var n = 1
                while n < 11
                    .callout
                        a(href='', title='')=  'Достаточно длинный заголовок другой новости ' + n++
                        span.text-medium-gray &#160; 17 февраля, 10:59 &#160;

    .row.column: hr