.content
    .row
        .small-12.medium-8.column
            h2 Видео
        .small-12.medium-4.column.medium-text-right
            a.button(href='#') Всё видео &nbsp;<i class="fa fa-long-arrow-right"></i>

    section.row.small-up-1.medium-up-2.large-up-3(data-equalizer='video', data-equalize-by-row='true')
        each item in [1, 2, 3, 4, 5, 6]
            .column
                .callout(data-equalizer-watch='video')
                    img.mb-1(src='./i/image.svg', alt='Видео', style='background:#999;width:100%;height:170px;')
                    .mb-0-5
                        a(href='#' title='') Приняли на комплексное обслуживание новый сайт компании&nbsp;
                            = item
                    .mb-1
                        i.fa.fa-eye &nbsp;
                        span.text-dark-gray 128
