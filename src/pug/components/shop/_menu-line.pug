.background-primary.padding-vertical-10
    .grid-container: .grid-x.grid-padding-x
        .small-12.large-8.cell#menu
            ul.menu-base
                - n = 0
                each title in ['Новинки', 'Бренды', 'Одежда', 'Обувь', 'Аксессуары']
                    li.menu-base__item
                        a.menu-base__link(href='shop-catalog.html' data-toggle-hover-dd='menu_item_' + n)= title
                    - n++
                li.menu-base__item
                    a.menu-base__link(href='#')
                        strong Распродажа %
            .margin-bottom-10.show-for-small-only
        .small-12.large-4.cell
            form.search-top.input-group(action='shop-search.html' method='get')
                input.search-top__input.input-group-field(type='text', value='' placeholder='Введите поисковый запрос')
                .input-group-button
                    button.search-top__button.fa.fa-search(type='submit')

.dd.hide-for-small-only#menu_item_0(data-toggler-hover-dd='dd_show')
    .dd__content.callout
        .grid-container: .grid-x.grid-padding-x
            .small-6.medium-4.large-3.cell
                h5 Одежда
                ul
                    each title in ['Все категории', 'Платья', 'Пальто', 'Пуховики', 'Куртки', 'Парки', 'Юбки', 'Брюки', 'Блузы и рубашки', 'Деним', 'Свитеры и трикотаж', 'Комбинезоны', 'Топы', 'Нижнее белье', 'Распродажа']
                        li
                            a(href='#' title='')= title
            .small-6.medium-4.large-3.cell
                h5 Актуально
                ul
                    each title in ['Классика гардероба', 'Одежда для фитнеса', 'Новый сезон', 'Бизнес-класс', 'Выход в свет', 'Бестселлеры', 'Рукав-колокол', 'Миниатюрные сумки', 'Бархат', 'Вечерние образы', 'Пуховики']
                        li
                            a(href='#' title='')= title
            .small-12.medium-4.large-offset-2.cell
                .margin-bottom-10: img(src='./i/image.svg' alt='1')
                span.label.success
                    i.fa.fa-star-o
                    | &nbsp;Акция
                | &nbsp;
                a(href='shop-product.html' title='') Торцовочная пила Ryobi EMS254L
