.menu-line
    .row
        .small-12.large-8.columns#menu
            ul.menu-base
                - n = 0
                each title in ['Новинки', 'Бренды', 'Одежда', 'Обувь', 'Аксессуары']
                    li.menu-base__item
                        a.menu-base__link(href='#' data-toggle-hover-dd='menu_item_' + n)= title
                    - n++
                li.menu-base__item
                    a.menu-base__link(href='#')
                        strong Распродажа %
        .small-12.large-4.columns
            form.search-top.input-group
                input.search-top__input.input-group-field(type='text', value='' placeholder='Введите поисковый запрос')
                .input-group-button
                    button.search-top__button.fa.fa-search(type='button')

.dd.hide-for-small-only#menu_item_0(data-toggler-hover-dd='dd_show')
    .dd__content.callout
        .row
            .small-6.medium-4.large-3.columns
                h5 Одежда
                ul
                    each title in ['Все категории', 'Платья', 'Пальто', 'Пуховики', 'Куртки', 'Парки', 'Юбки', 'Брюки', 'Блузы и рубашки', 'Деним', 'Свитеры и трикотаж', 'Комбинезоны', 'Топы', 'Нижнее белье', 'Распродажа']
                        li
                            a(href='#')= title
            .small-6.medium-4.large-3.columns
                h5 Актуально
                ul
                    each title in ['Классика гардероба', 'Одежда для фитнеса', 'Новый сезон', 'Бизнес-класс', 'Выход в свет', 'Бестселлеры', 'Рукав-колокол', 'Миниатюрные сумки', 'Бархат', 'Вечерние образы', 'Пуховики']
                        li
                            a(href='#')= title
            .small-12.medium-4.large-offset-2.columns
                p: img(src='./images/image.svg')
                span.label.success
                    i.fa.fa-star-o
                    | &nbsp;Акция
                | &nbsp;
                a(href='shop-product.html') Торцовочная пила Ryobi EMS254L
