mixin productLine(discount, onDemand, inCart, inFavourites)
    .row
        .column.small-4.medium-2
            .mb-1: img(src='./i/image.svg' alt='Товар')
        .column.small-8.medium-6.large-5
            h5.mb-0-5
                if discount
                    span.label.success
                        i.fa.fa-star-o
                        | &nbsp;Акция
                    | &nbsp;
                a.text-dark(href='shop-product.html') Картридж совместимый SuperFine (SF-CN048AE) 951XL Magenta
            ul.hide-for-small-only
                li Гарантия: 1 год
                li Мощность: 1000W
                li Цвет: Красный
                li Страна: Китай

        .column.small-12.medium-4.large-offset-1
            if onDemand
                .mb-1
                    span.text-dark-gray: em Нет в наличии&nbsp;
                    br
                    a(href='#' title=''): strong Заказать
            else
                .row.collapse
                    .small-7.columns
                        .mb-1
                            span.stat
                                | 1&nbsp;250&nbsp;
                                i.fa.fa-rub
                            if discount
                                br
                                del.text-dark-gray
                                    | 1&nbsp;750&nbsp;
                                    i.fa.fa-rub
                    .small-5.columns
                        .mb-1
                            if inCart
                                a(href='shop-cart.html' title='')
                                    span.dark-gray
                                        i.fa.fa-check.fa-lg
                                        | &nbsp;В корзине
                            else
                                a(href='shop-cart.html' title='').button.hollow.expanded Купить
            div.hide-for-small-only
                hr.mb-1
                .mb-0-25
                    i.fa.fa-credit-card
                    | &nbsp;Купить в кредит
                .mb-0-25
                    i.fa.fa-truck
                    | &nbsp;Доставим на дом
                .mb-1
                    if !inFavourites
                        a(data-open="add-to-favourites-auth-popup")
                            i.fa.fa-heart-o
                            | &nbsp;Запомнить

                    else
                        a(href='' title='Удалить из запомненных')
                            i.fa.fa-heart
                            | &nbsp;Запомнено
                    | &nbsp;&nbsp;
                    a(href='shop-compare.html' title='')
                        i.fa.fa-balance-scale
                        | &nbsp;Сравнить
