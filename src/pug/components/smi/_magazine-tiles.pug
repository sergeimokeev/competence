//- magazineTile mixin START
mixin magazineTile(title)
    .cell
        .callout.news-card
            .margin-bottom-6
                img(src='./i/image.svg', alt='Обложка журнала', style='background:#4da0c7;width:100%;height:220px;')
            .margin-bottom-6
                a(href='#')= title
//- magazineTile mixin END

.content
    .grid-x.grid-padding-x
        .small-12.medium-8.cell
            h2 Выпуски журналов
        .small-12.medium-4.cell.medium-text-right
            a.button(href='#') Архив журналов &nbsp;<i class="fa fa-long-arrow-right"></i>
    .grid-x.grid-padding-x.small-up-1.medium-up-2.large-up-3.margin-bottom-6
        +magazineTile('Название журнала №9 (54) 2015')
        +magazineTile('Название журнала №8 (53) 2015')
        +magazineTile('Название журнала №7 (52) 2015')
    .grid-x.grid-padding-x: .cell.text-center
        a.button.hollow(href='#', title='') Подписка на бумажное издание