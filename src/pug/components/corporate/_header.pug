.menu-line
    .row
        .small-10.large-3.columns.text-center.large-text-left
            a(href='#' title='')
                img(src='./i/image.svg', style='width: 400px; height: 70px', alt='logo')
        .small-2.column.hide-for-medium
            .show-for-small-only(data-responsive-toggle='menu', data-hide-for='medium')
                br
                .text-white(data-toggle)
                    i.fa.fa-bars.fa-2x
        .small-12.large-9.columns#menu
            br
            ul.menu-base.large-text-right
                each title in ['Сайт', 'Магазин', 'Интернет-СМИ', 'Реклама', 'Мобильные', 'Обучение', 'Конверсия']
                    li.menu-base__item
                        a.menu-base__link(href='#')= title