mixin productTile(title, discount)
  .cell
    .grid-x.prod
      .cell.small-5.medium-24.prod__img
        a(href='shop-product.html'): img(src='./i/photo.svg' alt='товар')
      .cell.small-18.medium-24.small-offset-1.medium-offset-0.prod__main(data-equalizer-watch)
        if discount
          span.label.label_action
            i.far.fa-star.picture
            | Акция
        div: a(href='shop-product.html')
          if title
            = title
          else
            | Название товара
        a.prod__cat(href='shop-catalog.html') Шуроповерты
    hr.hr.show-for-medium
    .grid-x.grid-padding-x.prod__info
      .cell.auto.medium-24.prod__rub
        span.prod__price
          | 1&nbsp;250&nbsp;
          i.fas.fa-ruble-sign
        if discount
          del.prod__old
            | 1&nbsp;750&nbsp;
            i.fas.fa-ruble-sign
      .cell.shrink.medium-auto
        a(href='shop-cart.html').button.button_prod Купить
      .cell.shrink.text-right.align-self-middle
        a.prod__favor(title='Запомнить' data-open="add-to-favourites-auth-popup")
          i.far.fa-heart.fa-lg
        a.prod__favor(title="Добавить к сравнению" href='shop-compare.html')
          i.fas.fa-balance-scale.fa-lg
    hr.hr.show-for-small-only
